@{
  ViewBag.Title = "Edit";
}
@model Zaza.Entities.Supplier
<h2>Edit</h2>

@if (!(Model == null))
{
  @Html.HiddenFor(id => Model.ID)
}

@using (Html.BeginForm("Edit", "Supplier", FormMethod.Post, new { id = "supplier-form" }))
{
  @Html.ValidationSummary()
  @Html.EditorForModel()
}



<a class="admin-button" href="javascript:void()" onclick="$('#supplier-form').submit();">
  <span>Save</span>
</a>
<a href="@Url.Action("List")" class="admin-button" id="back">
  <span>Back</span>

</a>